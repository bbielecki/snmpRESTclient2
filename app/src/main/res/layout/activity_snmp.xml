<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_snmp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bartomiej.snmprestclient.snmp">

    <Button
        android:text="OID bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveOIDButton"
        android:layout_marginBottom="155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:elevation="0dp" />

    <Button
        android:text="SNMP Browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oidBrowserButton"
        android:layout_alignBaseline="@+id/saveOIDButton"
        android:layout_alignBottom="@+id/saveOIDButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="For Android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oidTextView"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_above="@+id/saveOIDButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp" />

    <TextView
        android:text="SNMP Browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_above="@+id/oidTextView"
        android:layout_toRightOf="@+id/saveOIDButton"
        android:layout_toEndOf="@+id/saveOIDButton"
        android:layout_marginBottom="63dp" />

</RelativeLayout>
